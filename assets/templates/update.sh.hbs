{{!
    Tempalte for update.sh
}}#!/bin/bash

###
# Update dependencies for {{pkg.name}}.
###

HERE=$(cd "$(dirname $0)" && pwd)
BASE_DIR=$(cd "${HERE}/.." && pwd)

cd ${BASE_DIR}

# Re-install dependencies.
npm uninstall {{#each pkg.dependencies}}{{@key}} {{/each}} --save
npm install {{#each pkg.dependencies}}{{@key}} {{/each}} --save

# Re-install dev dependencies.
npm uninstall {{#each pkg.devDependencies}}{{@key}} {{/each}} --save-dev
npm install {{#each pkg.devDependencies}}{{@key}} {{/each}} --save-dev
